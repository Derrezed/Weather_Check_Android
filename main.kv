Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                name:"MainScreen"
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Weather App"
                        #md_bg_color: app.theme_cls.accent_color
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                    MDTabs:
                        id: android_tabs
                        on_tab_switch: app.on_tab_switch(*args)
                        Tab:
                            text:"Pogoda na dzisiaj"
                            DailyWeather:
                        Tab:
                            text:"Pogoda na 5dni"
                            FutureWeather:
            Screen:
                screen_manager: screen_manager
                name:'Localization'
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Zarzadzaj lokalizacjami"
                        elevation: 10
                        MDIconButton:
                            icon:'keyboard-backspace'
                            on_release:
                                screen_manager.current = 'MainScreen'
                    LocalizationManager:
                        screen_manager: screen_manager
        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                id: content_drawer



<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/logo/kivy-icon-256.png"

    MDLabel:
        text: "Weather App"
        #color: 1,1,1,1
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "Systemy Mobilne i Wbudowane "
        color: 1,1,1,1
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    MDFillRoundFlatIconButton:
        icon: "plus"
        text: "Zarzadzaj lokalizacjami"
        on_release:
            root.nav_drawer.set_state("close")
            root.screen_manager.current = 'Localization'

